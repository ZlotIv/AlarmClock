<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="zlotnikov.alarmclock.MainActivity"
    android:orientation="vertical">
    <Button
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:id="@+id/new_alarmClock"
        android:onClick="onClickAlarm"
        android:text="Добавить будильник"
        android:layout_centerHorizontal="true"/>
    <ListView
        android:id="@+id/alarmClock_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_alarmClock">
    </ListView>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="музыка"
        android:id="@+id/choose_music"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/new_alarmClock" />
</RelativeLayout>

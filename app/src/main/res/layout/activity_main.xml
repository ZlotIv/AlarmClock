<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="zlotnikov.alarmclock.MainActivity"
    android:orientation="vertical">
    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/new_alarmClock"
        android:onClick="onClickAlarm"
        android:layout_centerHorizontal="true"
        android:background="@drawable/newalarmbuttonselector"/>
    <ListView
        android:id="@+id/alarmClock_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_alarmClock"
        android:divider="@color/colorBlack"
        android:dividerHeight="1dp">
    </ListView>

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/choose_music"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/choosesongbuttonselector"/>
</RelativeLayout>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/colorBlack</item>
        <item name="android:timePickerStyle">@style/myTimePicker</item>
        <item name="android:colorBackground">@color/lightskyBlue</item>
    </style>
    <style name="myTimePicker" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:numbersSelectorColor">@color/colorWhite</item>
        <item name="android:numbersBackgroundColor">@color/colorBlack</item>
        <item name="android:numbersTextColor">@color/colorWhite</item>
        <item name="android:headerBackground">@drawable/timepickerheader</item>
    </style>
    <style name="myTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="myAlertDialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:colorPrimary">@color/colorBlack</item>
        <item name="android:colorAccent">@color/colorBlack</item>
        <item name="android:colorControlNormal">@color/colorBlack</item>
        <item name="android:colorControlActivated">@color/colorBlack</item>
        <item name="android:textColorAlertDialogListItem">@color/colorBlack</item>
    </style>
</resources>
